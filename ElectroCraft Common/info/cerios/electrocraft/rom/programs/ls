local tArgs = {...}

local folder
if #tArgs > 0 then
	if type(tArgs[1]) ~= "string" then
		print("Usage: ls <optional path>")
		return
	end
	folder = file.createNewFileHandle(shell.path() .. tArgs[1])
else
	folder = file.createNewFileHandle(shell.path())
end

local files = folder:listFiles()
local makeNewLine = false
for i=1,#files do
	local file = files[i]
	local isFile = false
	if file:isFile() then
		isFile = true
	end
	local size = file:length()
	local suffix = "B"
	if size > 1024 then
		size = size / 1024
		suffix = "KB"
		if size > 1024 then
			size = size / 1024
			suffix = "MB"
		end
	end
	if makeNewLine then
		if isFile then
			write("\n    F:" .. file:getName() .. " - " .. tostring(size) .. suffix)
		else
			write("\n    D:" .. file:getName() .. " - " .. tostring(size) .. suffix)
		end
	else
		if isFile then
			write("    F:" .. file:getName() .. " - " .. tostring(size) .. suffix)
		else
			write("    D:" .. file:getName() .. " - " .. tostring(size) .. suffix)
		end
	end
	if i % 3 == 0 then
		makeNewLine = true
	else
		makeNewLine = false
	end 
end

write("\n")