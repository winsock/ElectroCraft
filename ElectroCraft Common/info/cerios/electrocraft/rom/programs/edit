local tArgs = {...}

if #tArgs < 1 then
	print("Usage: edit <file>")
	return;
end

if type(tArgs[1]) ~= "string" then
	print("Usage: edit <file>")
	return;
end

local fileHandle
local startChar = tArgs[1]:sub(1, 1)

if startChar == "/" then
	fileHandle = file.createNewFileHandle(tArgs[1])
else
	fileHandle = file.createNewFileHandle(shell.path() .. tArgs[1])
end

if not fileHandle then
	print("Unable to open or create file!")
	return;
end

if not fileHandle:exists() then
	fileHandle:createNewFile()
end

if not fileHandle:canRead() or not fileHandle:canWrite() or fileHandle:isDirectory() then
	print("Unable to open or create file!")
	return;
end

os.getTerminal():clear()

local data = {}
local running = true
local inMenu = false
local col = 1
local row = 1
local menuIndex = 1;
local menuItems = { "quit", "exit", "save" }
local term = os.getTerminal()

function save()
	local write = fileHandle:open("w")
	local first = true
	for i, v in ipairs(data) do
		if not first then
			write:newLine()
		end
		write:write(v, 0, v:len())
		first = false
	end
	write:flush()
	write:close()
end

local read = fileHandle:open("r")
local first = true
while read:ready() do
	if not first then
		write("\n")
	end
	local line = read:readLine()
	table.insert(data, line)
	write(line)
	first = false
end
read:close()

function displayMenu()
	term:setPosition(term:getRows() - 1, 0);
	write("Menu: ")
	for i, v in ipairs(menuItems) do
		if i == menuIndex then
			write("[" .. v .. "] ")
		else
			write(v .. " ")
		end
	end
	term:setPosition(row - 1, col)
end

if #data <= 0 then
	table.insert(data, "")
else
	row = #data
	col = data[#data]:len()
end

while running do
	local event, key = os.waitForEvent("key", "code")
	term:setEditing(true)
	if inMenu then
		if key == "\n" then
			if menuIndex == 1 then
				save()
				running = false
			elseif menuIndex == 2 then
				running = false
			elseif menuIndex == 3 then
				save()
			end
			inMenu = not inMenu
		elseif key == kbrd.keycodes.left then
			if menuIndex > 1 then
				menuIndex = menuIndex - 1
			end
		elseif key == kbrd.keycodes.right then
			if menuIndex < #menuItems then
				menuIndex = menuIndex + 1
			end
		end
		if key == kbrd.keycodes.ctrl then
			if #data >= term:getRows() and data[term:getRows()] then
				term:setPosition(term:getRows() - 1, 0);
				write(data[term:getRows()])
				term:setPosition(row - 1, col)
			else
				term:setPosition(term:getRows() - 1, 0);
				term:clearLine()
				term:setPosition(row - 1, col)
			end
			inMenu = not inMenu
		else
			displayMenu()
		end
	elseif event == "key" then
		if key == "\n" then
			if data[row] and data[row]:len() > col + 1 then
				local part = data[row]:sub(col + 1, data[row]:len())
				data[row] = data[row]:sub(0, col)
				term:clearLine()
				write(data[row])
				table.insert(data, row + 1, part)
				write("\n")
				term:setPosition(row, 0)
				write(part)
				for i=row+2, #data do
					write("\n" .. data[i])
				end
			else
				table.insert(data, row + 1, "")
			end
			col = 0
			row = row + 1
			term:setPosition(row - 1, col)
		else
			local front = ""
			local back = ""
			if col >= 1 then
				front = data[row]:sub(1, col)
			end
			if data[row] and data[row]:len() >= col + 1 then
				back = data[row]:sub(col + 1, data[row]:len())
			end
			data[row] = front .. key .. back
			col = col + 1
			term:clearLine()
			write(data[row])
			term:setPosition(row - 1, col)
		end
	elseif event == "code" then
		if key == kbrd.keycodes.backspace then
			if col > 0 and data[row] and data[row]:len() > 0 then
				local front = ""
				local back = ""
				if col - 1 > 0 then
					front = data[row]:sub(1, col - 1)
				end
				if data[row]:len() >= col + 1 then
					back = data[row]:sub(col + 1, data[row]:len())
				end
				data[row] = front..back
				term:clearLine()
				write(data[row])
				col = col - 1
				term:setPosition(row - 1, col)
			elseif #data > 1 and row > 1 then
				if data[row] and data[row]:len() > 0 then
					local part = data[row]:sub(0, data[row]:len())
					if not data[row - 1] then
						data[row - 1] = part
					else
						data[row - 1] = data[row - 1] .. part
					end
					term:setPosition(row - 2, data[row - 1]:len())
					write(part)
				end
				table.remove(data, row)
				term:deleteRow(row - 1)
				row = row - 1
				col = data[row]:len()
				term:setPosition(row - 1, col)
			end
		elseif key == kbrd.keycodes.ctrl then
			inMenu = not inMenu
			if inMenu then
				displayMenu()
			end
		elseif key == kbrd.keycodes.left then
			if col > 0 then
				col = col - 1
				term:setPosition(row - 1, col)
			end
		elseif key == kbrd.keycodes.right then
			if data[row] and col < data[row]:len() then
				col = col + 1
				term:setPosition(row - 1, col)
			end
		elseif key == kbrd.keycodes.up then
			if row > 1 then
				row = row - 1
				if data[row]:len() < col then
					col = data[row]:len()
				end
				term:setPosition(row - 1, col)
			end
		elseif key == kbrd.keycodes.down then
			if row + 1 <= #data then
				row = row + 1
				if data[row]:len() < col then
					col = data[row]:len()
				end
				term:setPosition(row - 1, col)
			end
		end
	end
	term:setEditing(false)
end

term:clear()